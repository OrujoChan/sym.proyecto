{% extends 'base.html.twig' %}

{% block principal %}
	<div class="container mt-5">
		<div class="card shadow-sm">
			<div class="card-body text-center">
				<h2 class="card-title">Perfil de Usuario</h2>

				<p class="mt-3">
					<strong>Nombre de Usuario:</strong>
					<span class="badge bg-primary">{{ username|e }}</span>
				</p>

				{% if imagen is not empty %}
					<img src="{{ asset('img/img_perfil/' ~ imagen) }}" alt="Imagen de perfil" class="img-thumbnail rounded-circle mt-3" style="width: 150px; height: 150px; object-fit: cover;">
				{% else %}
					<p class="text-muted">No hay imagen de perfil disponible.</p>
				{% endif %}

				<div class="mt-4 d-flex justify-content-center gap-3">
					<a href="{{ path('app_edit_profile_picture') }}" class="btn btn-outline-primary">
						<i class="bi bi-image"></i>
						Cambiar imagen de perfil
					</a>
					<a href="{{ path('app_edit_profile_username') }}" class="btn btn-outline-secondary">
						<i class="bi bi-pencil-square"></i>
						Cambiar nombre de perfil
					</a>
					<a href="{{ path('app_change_password') }}" class="btn btn-outline-info">
						<i class="bi bi-arrow-repeat"></i>
						Change Password</a>
					<a href="{{ path('app_user_cards') }}" class="btn btn-outline-success">
						<i class="bi bi-collection"></i>
						Mis Cartas
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
